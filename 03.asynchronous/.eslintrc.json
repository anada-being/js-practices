{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],    // セミコロンをつけるかつけないか
    "semi-style": ["error", "last"],    // セミコロンを行末に書くか、次の文の行頭に書くか
    "no-extra-semi": "error"    // 余分なセミコロンを禁止する
  }
}
